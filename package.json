    "bugs": {
        "url": "https://github.com/guimatech/clean-node-api/issues"
    },
    "homepage": "https://github.com/guimatech/clean-node-api#readme",
    "devDependencies": {
        "@types/jest": "^25.2.3",
        "@types/node": "^14.0.4",
        "@types/validator": "^13.7.8",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "eslint": "^7.0.0",
        "eslint-config-standard-with-typescript": "^17.0.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "git-commit-msg-linter": "^2.4.2",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
